{
	"manifest_version": 2,
	"name": "Pherrit",
	"description": "A unholy merging of Phabricator and Gerrit.",
	"version": "1",
	"author": "Jan Drewniak",
	"permissions": ["activeTab"],
	"update_url": "https://j4n-co.github.io/pherrit/updates.xml",
	"content_scripts": [
		{
		  "matches": ["https://gerrit.wikimedia.org/*", "https://phabricator.wikimedia.org/*"],
		  "js": ["main.js"],
		  "css": ["style.css"],
		  "run_at": "document_idle"
		}
	]
}
